  { id: 'project-section', label: 'Mejora tu Espacio' },
  { id: 'contact-container', label: 'Contacto' },
];

const sectionMap = [
  { id: 'flooring-section', path: '/#flooring-section' },
  { id: 'project-section', path: '/#project-section' },
  { id: 'contact-container', path: '/#contact-container' },
];

const social = [
  { href: 'https://instagram.com/rgbcorp', icon: 'instagram', label: 'Instagram' },
  { href: 'https://facebook.com/rgbcorp', icon: 'facebook', label: 'Facebook' },
  { href: 'https://wa.me/1234567890', icon: 'whatsapp', label: 'WhatsApp' },
];

const copyright = 'Todos los derechos reservados.';
---

<footer class="footer" aria-label="Pie de página">
  <div class="footer-content">
    <div class="footer-logo">
      <img src="/img/logo_optimized.png" alt="RGB Corporation Logo" width="120" height="120" loading="lazy" />
    </div>
    
    <nav class="footer-links" aria-label="Navegación del sitio">
      {sectionMap.map((section, i) => (
        <a href={section.path} class="footer-link" data-aos="fade-up" data-aos-delay={100 + i * 50}>
          {sectionAnchors[i].label}
