---
const { floor } = Astro.props;
const floorObj = typeof floor === 'string' ? JSON.parse(decodeURIComponent(floor)) : floor;
let current = 0;
---
<div class="flooring-modal-panel">
  <div class="flooring-modal-gallery">
    <button class="nav-btn" onclick="this.parentNode.parentNode.querySelector('img,video').src = this.parentNode.parentNode.__gallery[--this.parentNode.parentNode.__current = (this.parentNode.parentNode.__current + this.parentNode.parentNode.__gallery.length - 1) % this.parentNode.parentNode.__gallery.length];">&#60;</button>
    {floorObj.gallery[current].endsWith('.mp4') ? (
      <video src={floorObj.gallery[current]} controls autoplay style="max-width: 320px; border-radius: 8px; background: #fff;" />
    ) : (
      <img src={floorObj.gallery[current]} alt={floorObj.label} style="max-width: 220px; border-radius: 8px; background: #fff;" />
    )}
    <button class="nav-btn" onclick="this.parentNode.parentNode.querySelector('img,video').src = this.parentNode.parentNode.__gallery[++this.parentNode.parentNode.__current = (this.parentNode.parentNode.__current + 1) % this.parentNode.parentNode.__gallery.length];">&#62;</button>
  </div>
  <div class="flooring-modal-title">{floorObj.label}</div>
  <div class="flooring-modal-description">{floorObj.description}</div>
  <button class="close-detail" onclick="this.closest('.flooring-detail, .flooring-modal-panel').parentNode.innerHTML = ''">Cerrar</button>
</div>
<script is:inline>
  const panel = document.currentScript.parentNode;
  panel.__gallery = {JSON.stringify(floorObj.gallery)};
  panel.__current = 0;
</script>
<style>
.flooring-modal-panel {
  background: #f8f9fa;
  border-radius: 16px;
  margin: 1rem 0 2rem 0;
  padding: 2rem 1rem 1.5rem 1rem;
  box-shadow: 0 2px 16px 0 rgba(42,120,146,0.10);
  display: flex;
  flex-direction: column;
  align-items: center;
  animation: fadeIn 0.3s;
}
.flooring-modal-gallery {
  display: flex;
  align-items: center;
  gap: 1rem;
  margin-bottom: 1rem;
}
.nav-btn {
  background: #2a7892;
  color: #fff;
  border: none;
  border-radius: 50%;
  width: 36px;
  height: 36px;
  font-size: 1.2rem;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: background 0.2s;
}
.nav-btn:hover {
  background: #1b4e5c;
}
.flooring-modal-title {
  font-size: 1.3rem;
  font-weight: bold;
  margin-bottom: 0.5rem;
  color: #2a7892;
}
.flooring-modal-description {
  font-size: 1rem;
  opacity: 0.95;
  margin-bottom: 1rem;
  text-align: center;
}
.close-detail {
  background: #2a7892;
  color: #fff;
  border: none;
  border-radius: 6px;
  padding: 0.5rem 1.2rem;
  font-size: 1rem;
  cursor: pointer;
  margin-top: 0.5rem;
  transition: background 0.2s;
}
.close-detail:hover {
  background: #1b4e5c;
}
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20px); }
  to { opacity: 1; transform: none; }
}
</style> 